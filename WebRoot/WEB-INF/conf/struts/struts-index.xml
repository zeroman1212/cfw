<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="index" namespace="/" extends="struts-base">
        <action name="login" class="loginAction" method="login">
            <result>/Ext/index.jsp</result>
        </action>
	</package>
	
	<package name="jsonIndex" namespace="/" extends="json-base">
        <action name="menu" class="loginAction" method="menu">
            <result type="json" >
            	<param name="root">menuList</param>
            </result>
        </action>
	</package>
</struts>